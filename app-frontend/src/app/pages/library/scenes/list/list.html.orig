          total-items="$ctrl.lastSceneResult.count"
          ng-model="$ctrl.currentPage"
          max-size="4"
          rotate="true"
          boundary-link-numbers="true"
          force-ellipses="true"
          ng-change="$ctrl.populateSceneList($ctrl.currentPage)">
      </ul>
