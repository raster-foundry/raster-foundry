<configuration>
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>[%thread] %-5level - %msg%n</pattern>
    </encoder>
  </appender>

  <logger name="com.rasterfoundry" level="${RF_LOG_LEVEL:-INFO}"/>

  <root level="WARN">
    <appender-ref ref="STDOUT" />
  </root>
</configuration>
