#!/bin/bash

set -e

if [[ -n "${RF_DEBUG}" ]]; then
    set -x
fi

function usage() {
    echo -n \
         "Usage: $(basename "$0")
Attempts to setup the project's development environment.
"
}

if [ "${BASH_SOURCE[0]}" = "${0}" ]
then
    if [ "${1:-}" = "--help" ]
    then
        usage
    else
        # Ensure that a directory exists to house AWS profiles.
        mkdir -p "${HOME}/.aws"
        mkdir -p "nginx/srv/dist/"

        AWS_PROFILE=${AWS_PROFILE:-raster-foundry} \
        RF_SETTINGS_BUCKET=${RF_SETTINGS_BUCKET:-rasterfoundry-development-config-us-east-1} \
            ./scripts/bootstrap --env

        AWS_PROFILE=${AWS_PROFILE:-raster-foundry} \
        RF_SETTINGS_BUCKET=${RF_SETTINGS_BUCKET:-rasterfoundry-development-config-us-east-1} \
            ./scripts/bootstrap --sbtopts

        vagrant up --provision
    fi
fi
