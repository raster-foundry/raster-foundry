#!/bin/bash
set -eu

function usage() {
    echo -n \
"Usage: $(basename "$0")

Starts servers using docker-compose
"
}

if [ "${BASH_SOURCE[0]}" = "${0}" ]
then
    if [ "${1:-}" = "--help" ]
    then
        usage
    else
        TILE_SERVER_LOCATION="http://localhost:8081" \
                            docker-compose \
                            up backsplash api-server nginx-api memcached
    fi
    exit
fi
