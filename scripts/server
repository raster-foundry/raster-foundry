#!/bin/bash

set -e

if [[ -n "${RF_DEBUG}" ]]; then
    set -x
fi

function usage() {
    echo -n \
"Usage: $(basename "$0")

Starts application services using docker-compose.
"
}

if [ "${BASH_SOURCE[0]}" = "${0}" ]; then
    if [ "${1:-}" = "--help" ]; then
        usage
    else
        TILE_SERVER_LOCATION="http://localhost:8081" \
            docker-compose \
            up nginx-backsplash backsplash api-server nginx-api
    fi
fi
