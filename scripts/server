#!/bin/bash
set -eu


DIR="$(dirname "$0")"

function usage() {
    echo -n \
"Usage: $(basename "$0") [--with-metrics]

Starts servers using docker-compose
"
}

if [ "${BASH_SOURCE[0]}" = "${0}" ]
then
    if [ "${1:-}" = "--help" ]
    then
        usage
    elif [ "${1:-}" = "--with-metrics" ]
    then
        docker-compose -f "${DIR}/../docker-compose.yml" \
                       -f "${DIR}/../docker-compose.metrics.yml" up
    else
        TILE_SERVER_LOCATION="http://localhost:8081" \
                            docker-compose \
                            -f docker-compose.java.yml \
                            up nginx-backsplash backsplash api-server nginx-api
    fi
    exit
fi
